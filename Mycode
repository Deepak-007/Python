from random import *
from time import sleep
list=[1,2,3,4,5,6]
n=0
m=1
t=0
while m!=n :
      print("Choice any number from 1-6 ")
      n = int(input())
      if n<7:
            pass
      else:
            print("Wrong input")
            n=0
      m = choice(list)
      if n!=0:
            print("Computer chooses:", m)
      if m==n:
            print("Oops!! OUT")
            sleep(2)
            print("Final score is ",t)
      else:
            t=t+n
            print("Your score :",t)
